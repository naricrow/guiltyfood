<%= render "shared/header" %>

  <div class="food_main">
    <div class="food_content">
      <% @foods.each do |food| %>
          <div class="food_img_content">
            <%= link_to image_tag food.image,class: "food_img" %>
          </div>
        <div class="food_info">
            <%= link_to food.name,class: "food_name" %>
          <div class="food_text">
            <%= food.content %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
   

<%= render "shared/footer"%>