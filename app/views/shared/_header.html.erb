<header class="header">
  <div class="logo"><a href="/">GuiltyFood</a></div>
  <% if user_signed_in? %>
    <div class="user_nav">
      <span><%= current_user.nickname %>
      <ul class="user_info">
        <li>
          <%= link_to current_user.nickname, "#" ,class: "post" %>
          <%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete} ,class: "post" %>
        </li>
      </ul>
      <span>
      <%= link_to "投稿する", new_food_path, class: "post" %>
      </span>
    </div>
  <% else %>
      <ul class="nav">
        <li>
          <%= link_to "ログイン", new_user_session_path, class: "post" %>
          <%= link_to "新規会員登録", new_user_registration_path, class: "post" %>
        </li>
      </ul>
  <% end %>
</header>